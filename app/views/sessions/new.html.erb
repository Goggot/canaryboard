<% title "Log in" %>
<h3>Log in</h3>
<%= form_tag login_path do %>
<table>
  <tr>
    <td><%= text_field_tag :name, nil, placeholder: "Name" %></td>
  </tr>
  <tr>
    <td><%= password_field_tag :password, nil, placeholder: "Password" %></td>
  </tr>
  <tr>
    <td><%= button_tag "Log in", class: "btn btn-primary btn-block" %></td>
  </tr>
</table>
<% end %>
