%section#statuses
  %h2.page-header
    Statuses
    %a{href:"#top"} &uarr;
  %table.table.table-auto.table-condensed
    %thead
      %tr
        %th Property
        %th Description
    %tbody
      %tr
        %td id
        %td The unique identifier by which to identify the status
      %tr
        %td name
        %td The name of the status
  %h4 Instance Resource
  %pre.prettyprint
    = preserve do
      :escaped
        {
          "id": {integer},
          "name": {string}
        }
  %h4 List Resource
  %pre.prettyprint
    = preserve do
      :escaped
        [
          instance-resource-1,
          instance-resource-2,
          ...
          instance-resource-n,
        ]

  %a{name:"statuses-list"}
  %h3 List
  %p Returns all statuses.
  %h4 Request
  = api_request_code "statuses", "get"
  %h4 Response
  %p List Resource of statuses.
