<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>
      </th>
      <% @services.each do |service| %>
      <th>
        <%= service.name %>
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <th style="text-align: right;">
        <%= project.name %>
      </th>
      <% @services.each do |service| %>
      <td>
        <%= project.indicators.find_by_service_id(service.id).current_status.name %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
