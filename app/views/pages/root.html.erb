<script type="text/javascript">
$(document).ready(function(){
  $(".indicator").popover({ "trigger": "hover", "placement": "bottom", "title": "Status description" });
});
</script>
<div style="text-align: center;">
  <h2>Indicators</h2>
  <table class="table table-condensed table-hover table-bordered" style="width: auto; display: inline-block">
    <thead>
      <tr>
        <th>
        </th>
        <% @services.each do |service| %>
        <th style="vertical-align: middle; text-align: center;">
          <%= service.name %>
        </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
      <tr>
        <th style="vertical-align: middle; text-align: right;">
          <%= project.name %>
        </th>
        <% @services.each do |service| %>
        <td style="text-align: center;">
          <%= status_button project.indicators.find_by_service_id(service.id) %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
